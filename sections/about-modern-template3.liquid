<style>
  .about-modern-section3 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media (max-width: 1199px) {
    .about-modern-section3 {
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .about-modern-section3 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  /*section title*/
  .about-modern-section3 .main-title{
    width: 70%;
  }
  .about-modern-section3 .main-title h2{
    font-size: 40px;
  }
  .about-modern-section3 .main-title p{
    font-size: 16px;
    font-weight: 500;
    margin-top: 30px;
  }
  @media(max-width: 1199px){
    .about-modern-section3 .main-title{
      width: 100%;
    }
    .about-modern-section3 .main-title h2{
      font-size: 26px;
    }
    .about-modern-section3 .main-title p{
      margin-top: 15px;
    }
  }
  @media(max-width: 767px){
    .about-modern-section3 .main-title h2{
      font-size: 20px;
    }
    .about-modern-section3 .main-title p{
      font-size: 14px;
    }
  }
  .about-modern-section3 .progressbar-content .skills{
    margin-top: 50px;
  }
  .about-modern-section3 .progressbar-content .skills:first-child{
    margin-top: 0;
  }
  .about-modern-section3 .progressbar-content .skills .skill-item h6{
    font-size: 16px;
    text-transform: uppercase;
    line-height: 1
  }
  .about-modern-section3 .progressbar-content .skills .skill-progress{
    background: #f6f6f6;
    position: relative;
    width: 100%;
    height: 10px;
    border-radius: 50px;
    margin-top: 18px;
  }
  .about-modern-section3 .progressbar-content .skills .skill-progress .progres{
    width: 96%;
    position: absolute;
    height: 100%;
    left: 0;
    top: 0;
    background: {{ settings.color_secondary }};
    border-radius: 10px;
    -webkit-transition: all 0.9s ease-in-out 0s;
    -o-transition: all 0.9s ease-in-out 0s;
    transition: all 0.9s ease-in-out 0s;
  }
  .about-modern-section3 .progressbar-content .skills .skill-progress .progres:after{
    content:attr(data-value);
    font-size: 16px;
    font-weight: 600;
    position: absolute;
    z-index: 1;
    top: -40px;
    {% if settings.enable_rtl %}
    left: 0px;
    {% else %}
    right: 0px;
    {% endif %}
    color: #232323;
  }

  @media(max-width: 1199px){
    .about-modern-section3 .progressbar-content .skills{
      margin-top: 30px;
    }
  }
  @media(max-width: 991px){
    .about-modern-section3 .progressbar-content {
      margin-top: 30px;
    }
  }
</style>
<script type="text/javascript">
  var skills = $(".skills");
  var id = skills.attr("id");
  function animateProgressBar() {
    $(".progres").css("width", function () {
        return $(this).attr("aria-valuenow") + "%";
    });
  }

  var waypoint = new Waypoint({
      element: document.getElementById(id),
      handler: function (direction) {
          animateProgressBar();
      },
      offset: "75%"
  });
</script>