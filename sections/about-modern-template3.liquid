<!-- Browuse categoryies -->
<section class="about-modern-section3">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="main-title">
          <h2>
            <span>{{ section.settings.section_title1 }}</span>
            <span>{{ section.settings.section_title2 }}</span>
          </h2>
          <p>{{ section.settings.section_desc }}</p>
        </div>
      </div>
      <div class="col-xl-6 col-lg-6 col-md-12 col-12">
        <div class="progressbar-content">
            {% for block in section.blocks %}
              <div class="skills" id="skills">
                <div class="skill-item">
                  <h6 class="skill-name">{{ block.settings.progress_title }}</h6>
                  <div class="skill-progress">
                    <div class="progres" role="progressbar" data-value="{{ block.settings.progress_percent }}%" aria-valuenow="{{ block.settings.progress_percent }}" aria-valuemin="0" aria-valuemax="100">
                      
                    </div>
                  </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>


