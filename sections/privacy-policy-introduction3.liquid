<section class="privacy-policy3">
  <div class="background-img wow animate__fadeIn">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        <div class="text-content">
          <div class="main-title">
            <h2>{{ section.settings.main_title }}</h2>
          </div>
          <div class="main-description">
            <ul>
              {% if section.settings.content_description1 != "" %}
              <li class="wow animate__fadeInUp">
                <p>{{ section.settings.content_description1 }}</p>
              </li>
              {% endif %}
              {% if section.settings.content_description2 != "" %}
              <li class="wow animate__fadeInUp">
                <p>{{ section.settings.content_description2 }}</p>
              </li>
              {% endif %}
              {% if section.settings.content_description3 != "" %}
              <li class="wow animate__fadeInUp">
                <p>{{ section.settings.content_description3 }}</p>
              </li>
              {% endif %}
              {% if section.settings.content_description4 != "" %}
              <li class="wow animate__fadeInUp">
                <p>{{ section.settings.content_description4 }}</p>
              </li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
