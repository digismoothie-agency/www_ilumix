<section class="our-store">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-center">
        <div class="section-capture">
          <div class="main-title">
            <h6>
              <span>{{ section.settings.section_title }}</span>
            </h6>
          </div>
        </div>
        <div class="our-store-slider owl-carousel owl-theme" id="our-store-slider">
          {% for block in section.blocks %}
          <div class="item wow animate__fadeInUp">
              <div class="store-img-cont">
                <img class="img-fluid" src="{% if block.settings.store_img %}{{ block.settings.store_img | img_url: 'master' }}{% else %}https://dummyimage.com/498x366/f7f7f7/999999{% endif %}">
                <div class="store-text">
                  <h6 class="store-title"><span>{{ block.settings.store_title }}</span></h6>
                  <div class="store-address">
                    <p>{{ block.settings.store_address }}</p>
                    <a class="tel-link" href="{{ block.settings.tel_url }}" target="black">{{ block.settings.tel_number }}</a>
                    <a class="map-url" href="{{ block.settings.view_map_url }}" target="black">{{ block.settings.view_map }}</a>
                  </div>
                </div>
              </div>                 
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $('#our-store-slider').owlCarousel({
    loop: false,
    rewind: true,
    margin: 30,
    items: 3,
    nav: false,
    navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
    dots: false,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    autoplay: true,
    autoplayTimeout: 5000,
    autoplayHoverPause: true,
    responsive:{
      0:{
        margin: 15,
        items: 1
      },
      479:{
        margin: 15,
        items: 1
      },
      768:{
        items: 2
      },
      979:{
        items: 2
      },
      1199:{
        items: 2
      },
      1599:{
        items: 3
      }
    }
  });
</script>
