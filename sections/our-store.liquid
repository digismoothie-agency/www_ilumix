<style>
  .our-store {
    margin-top: {{ section.settings.section_padding_top }}px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    margin-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media (max-width: 1199px) {
    .our-store {
      margin-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
      margin-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .our-store {
      margin-top: {{ section.settings.section_padding_top_xs }}px;
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
      margin-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  /*section title*/
  .our-store .section-capture{
    margin-bottom: 150px;
  }
  .our-store .main-title{
    text-align: right;
    position: relative;
  }
  .our-store .main-title h6{
    position: relative;
    font-size: 18px;
    color: #6f6f6f;
    font-weight: 400;
  }
  .our-store .main-title h6 span{
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: flex-end;
    padding-left: 30px;
  }
  .our-store .main-title h6:before{
    content: "{{ section.settings.section_big_title }}";
    font-size: 228px;
    font-weight: 600;
    line-height: 1;
    text-transform: lowercase;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke: 1px;
    opacity: .3;
    position: absolute;
    left: 0;
    bottom: 50%;
    transform: translate(-25%, 50%);
  }
  .our-store .main-title h6 span:after{
    content: '';
    position: absolute;
    right: 100%;
    height: 2px;
    width: 210px;
    background-color: {{ settings.color_primary }};
    opacity: .5;
  }

  @media(max-width: 1599px){
    .our-store .main-title h6:before{
      font-size: 168px;
    }
  }

  @media(max-width: 1199px){
    .our-store .section-capture {
      margin-bottom: 100px;
    }
    .our-store .main-title h6:before{
      font-size: 118px;
      transform: translate(-15%, 50%);
    }
    .our-store .main-title h6 span{
      padding-left: 15px;
    }
    .our-store .main-title h6 span:after{
      width: 110px;
    }
  }

  @media(max-width: 991px){
    .our-store .main-title h6:before {
        font-size: 88px;
    }
  }
  
  @media(max-width: 767px){
    .our-store .section-capture {
      margin-bottom: 30px;
    }
    .our-store .main-title h6{
      text-align: center;
    }
    .our-store .main-title h6:before{
      position: unset;
          transform: none;
          font-size: 50px;
    }
  }

  /*section content*/
  .our-store-slider .owl-item:nth-child(1) .item{
    animation-delay: 0.1s;
  }
  .our-store-slider .owl-item:nth-child(2) .item{
    animation-delay: 0.2s;
  }
  .our-store-slider .owl-item:nth-child(3) .item{
    animation-delay: 0.3s;
  }
  .our-store-slider .store-img-cont {
    position: relative;
    overflow: hidden;
  }

  .our-store-slider .store-img-cont img{
    border-radius: 5px;
  }
  .our-store-slider .store-img-cont .store-text{
    position: absolute;
    bottom: 0;
    right: 0;
    width: 60%;
    background-color: #fff;
    border-top-left-radius: 5px;
    padding: 40px;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
  }
  .our-store-slider .store-img-cont:hover .store-text{
    background-color: #232323;
  }

  .our-store-slider .store-img-cont .store-text h6.store-title{
    font-size: 20px;
    font-weight: 500;
  }
  
  .our-store-slider .store-img-cont .store-text .store-address{
    margin-top: 15px;
    height: 50px;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
  }
  .our-store-slider .store-img-cont .store-text .store-address a.tel-link{
    font-size: 16px;
    color: #fff;
    font-weight: 300;
  }
  .our-store-slider .store-img-cont .store-text .store-address a.map-url{
    font-size: 16px;
    color: #fff;
    border-bottom: 1px solid #fff;
    text-transform: uppercase;
    font-weight: 300;
  }
  .our-store-slider .store-img-cont .store-text .store-address p{
    font-size: 16px;
  }
  .our-store-slider .store-img-cont:hover .store-text h6.store-title{
    color: #fff;
  }

  .our-store-slider .store-img-cont .store-text .store-address a,
  .our-store-slider .store-img-cont:hover .store-text .store-address p{
    opacity: 0;
    visibility: hidden;  
    display: none;
  }
  .our-store-slider .store-img-cont:hover .store-text .store-address a{
    opacity: 1;
    visibility: visible;  
    display: inline-block;
  }
  @media(max-width: 991px){
    .our-store-slider .store-img-cont .store-text{
      width: 80%;
      padding: 30px;
    }
  }
</style>