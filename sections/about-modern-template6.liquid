  .about-modern-section6 .about-modern-testimonial-slider .owl-nav button.owl-next{
    position: absolute;
    bottom: 50%;
    transform: translate(50%);
    margin: 0;
    background: transparent;
    color: #222;
    font-size: 18px;
    text-transform: uppercase;
    font-weight: 500;
    border-bottom: 1px solid {{ settings.color_primary }};
    border-radius: 0;
  }
  .about-modern-section6 .about-modern-testimonial-slider .owl-nav button.owl-prev{
    left: -10px;
  }
  .about-modern-section6 .about-modern-testimonial-slider .owl-nav button.owl-next{
    right: 30px;
  }
  @media(max-width: 1199px){
    .about-modern-section6 .about-modern-testimonial-slider .owl-nav button.owl-prev,
    .about-modern-section6 .about-modern-testimonial-slider .owl-nav button.owl-next{
      font-size: 14px;
    }
  }
  @media(max-width: 767px){
    .about-modern-section6 .about-modern-testimonial-slider .owl-nav{
      display: none;
    }
  }
</style>