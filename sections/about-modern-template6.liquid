    .about-modern-section6 {
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px) {
    .about-modern-section6 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  /*section title*/
  .about-modern-section6 .section-capture{
    margin-bottom: 60px;
  }
  .about-modern-section6 .main-title {
    text-align: center;
  }
  .about-modern-section6 .main-title h2{
    font-size: 40px;
    line-height: 1;
  }
  @media(max-width: 1199px){
    .about-modern-section6 .section-capture{
      margin-bottom: 40px; 
    }
    .about-modern-section6 .main-title h2{
      font-size: 26px;
    }
  }
  @media(max-width: 767px){
    .about-modern-section6 .main-title h2{
      font-size: 20px;
    }
  }
  /*list content*/
  .about-modern-section6 .testi-content{
    width: 50%;
    margin: 0 auto;
    text-align: center;
  }
  .about-modern-section6 .testi-content .testi-desc p{
    font-size: 20px;
  }
  .about-modern-section6 .testi-content .testi-info span.quots-icon{
    color: {{ settings.color_primary }};
    line-height: 1;
    font-size: 58px;
    margin-top: 60px;
  }
  .about-modern-section6 .testi-content .testi-author {
    margin-top: 35px;
  }
  .about-modern-section6 .testi-content .testi-author h6{
    font-size: 18px;
    line-height: 1;
    text-transform: uppercase;
  }
  .about-modern-section6 .testi-content .testi-author span.author-name{
    font-size: 18px;
