<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-12 col-md-12 col-12 col-center">
        <div class="about-modern-section6">
          <div class="section-capture">
            <div class="main-title">
              <h2>{{ section.settings.section_title }}</h2>
            </div>
          </div>
          <div class="list-content">
            <div class="about-modern-testimonial-slider owl-carousel owl-theme" id="about-modern-testimonial-slider">
              {% for block in section.blocks %}
              <div class="item">
                <div class="testi-content">
                  <div class="testi-desc">
                    <p>{{ block.settings.testi_desc }}</p>
                  </div>
                  <div class="testi-info">
                    <span class="quots-icon">
                      <i class="fa fa-quote-left"></i>
                    </span>
                    <div class="testi-author">
                      <h6>{{ block.settings.testi_authrname }}</h6>
                      <span class="author-name">{{ block.settings.testi_authrtitle }}</span>
                    </div>
                  </div>
                </div>
              </div>
              {%- endfor -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  $('#about-modern-testimonial-slider').owlCarousel({
    loop: false,
    rewind: true,
    items: 1,
    margin: 0,
    nav: true,
    dots: false,
    navText: ['{{ section.settings.slider_prev_button }}','{{ section.settings.slider_next_button }}'],
    {%- if settings.enable_rtl -%}
    rtl: true
    {%- endif -%}
  });
</script>
{% schema %}
{
