    margin-top: 10px;
  }

  @media(max-width: 1199px){
    .about-modern-section6 .testi-content{
      width: 70%;
    }
    .about-modern-section6 .testi-content .testi-desc p{
      font-size: 16px;
    }
    .about-modern-section6 .testi-content .testi-info span.quots-icon{
      margin-top: 30px;
      font-size: 28px;
    }
    .about-modern-section6 .testi-content .testi-author{
      margin-top: 15px;
    }
    .about-modern-section6 .testi-content .testi-author span.author-name{
