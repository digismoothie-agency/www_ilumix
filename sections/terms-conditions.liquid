    margin-top: 0px;
    padding-top: 0px;
    border-top: none;
  }
  .terms-condition1 .rule-wrap ul li:nth-child(odd) .rule-wrapper{
    width: 90%;
  } 
  .terms-condition1 .rule-wrap ul li .rule-wrapper h6{
    font-size: 18px;
    font-weight: 500;
  } 
  .terms-condition1 .rule-wrap ul li .rule-wrapper p{
    font-size: 16px;
    margin-top: 15px;
  }

  @media(max-width: 1199px){
    .terms-condition1 .rule-wrap ul li .rule-wrapper p{
      font-size: 14px;
    }

  }
  @media(max-width: 1199px){
    .terms-condition1 .rule-wrap ul li{
      width: 100%;
    }
    .terms-condition1 .rule-wrap ul li .rule-wrapper,
    .terms-condition1 .rule-wrap ul li:nth-child(2) .rule-wrapper{
      border-top: 1px solid #e2e2e2;
      margin-top: 30px;
      padding-top: 30px;
    }
    .terms-condition1 .rule-wrap ul li:nth-child(odd) .rule-wrapper{
      width: 100%;
    }  
  }
</style>