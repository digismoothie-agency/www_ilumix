<!-- Browuse categoryies -->
<section class="slider-category2">
  <div class="container-fluid container-col">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        <div class="cat-slider owl-carousel owl-theme" id="category-slider">
          {% for block in section.blocks %}
          {% case block.type %}
          {% when 'slider_cat' %}
          {% assign category_product = collections[block.settings.slider_category_handle] %}
          <div class="item wow animate__fadeIn">
            <div class="category-wrap">
              <a href="{{ category_product.url }}" class="img-content">
                <span class="visible-img">
                  <img src="{% if block.settings.cat_img %}{{ block.settings.cat_img | img_url: 'master' }}{% else %}https://dummyimage.com/60x60/f7f7f7/999999{% endif %}">
                </span>
                <span class="hover-img">
                  <img src="{% if block.settings.cat_hover_img %}{{ block.settings.cat_hover_img | img_url: 'master' }}{% else %}https://dummyimage.com/60x60/f7f7f7/999999{% endif %}">
                </span>
              </a>
              <a href="{{ category_product.url }}" class="text-content">
                <span class="cat-title">{{ category_product.title }}</span>
                <span class="shop-title">{{ block.settings.shop_title }}</span>
              </a>
            </div>
          </div>
          {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $( document ).ready(function() {
    $('#category-slider').owlCarousel({
      loop: false,
      rewind: false,
      margin: 0,
      nav: false,
      navText: ['<i class="feather-arrow-left"></i>','<i class="feather-arrow-right"></i>'],
      dots: false,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      autoplay: true,
      autoplayTimeout: 5000,
      autoplayHoverPause: true,
      responsive:{
        0:{
          items: 2
        },
        479:{
          items: 2
        },
        768:{
          items: 3
        },
        979:{
          items: 4
        },
        1199:{
          items: 5
        }
      }
    });
  });
</script>
