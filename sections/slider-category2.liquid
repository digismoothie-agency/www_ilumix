<style>
.slider-category2 {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  {% if section.settings.slider_cat_bgcolor_enable %}
  background-color: {{ section.settings.slider_cat_bgcolor }};
  {% endif %}
}
@media (max-width: 1199px) {
  .slider-category2 {
    padding-top: {{ section.settings.section_padding_top_ipad }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
  }
}
@media (max-width: 767px) {
  .slider-category2 {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}
.slider-category2 .container-col{
  padding-left: 285px;
  padding-right: 285px;
}
@media(max-width: 1599px){
  .slider-category2 .container-col{
    padding-left: 60px;
    padding-right: 60px;
  }
}
@media(max-width: 1199px){
  .slider-category2 .container-col{
    padding-left: 30px;
    padding-right: 30px;
  }
}
@media(max-width: 767px){
  .slider-category2 .container-col{
    padding-left: 15px;
    padding-right: 15px;
  }
}
.slider-category2 .cat-slider .category-wrap {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.slider-category2 .cat-slider .category-wrap:hover a.img-content:before{
  opacity: 1;
  visibility: visible;
}
.slider-category2 .cat-slider .category-wrap a.img-content:before{
  content: "";
  position: absolute;
  z-index: -1;
  opacity: 0;
  visibility: hidden;
  background-image: url({% if section.settings.cat_hover_bg %}{{ section.settings.cat_hover_bg | img_url: 'master' }}{% else %}https://dummyimage.com/125x125/f7f7f7/999999{% endif %});
  width: 125px;
  height: 125px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  -webkit-transition: all 0.3s ease-in-out 0s;
  -o-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.slider-category2 .cat-slider .category-wrap a.img-content {
  height: 125px;
  width: 125px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.slider-category2 .cat-slider .category-wrap:hover a.img-content .visible-img,
.slider-category2 .cat-slider .category-wrap a.img-content .hover-img{
  display: none;
  -webkit-transition: all 0.3s ease-in-out 0s;
  -o-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.slider-category2 .cat-slider .category-wrap:hover a.img-content .hover-img{
  display: block;
  -webkit-transition: all 0.3s ease-in-out 0s;
  -o-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.slider-category2 .cat-slider .category-wrap a.text-content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 40px;
}
.slider-category2 .cat-slider .category-wrap a.text-content span.cat-title{
  color: {{ settings.body_text_color }};
  font-size: 16px;
  font-weight: 600;
  line-height: 1;
  text-transform: uppercase;
  -webkit-transition: all 0.3s ease-in-out 0s;
  -o-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.slider-category2 .cat-slider .category-wrap:hover a.text-content span.shop-title{
  opacity: 1;
  visibility: visible;
  transform: translateY(-15px);
}
.slider-category2 .cat-slider .category-wrap a.text-content span.shop-title{
  color: {{ settings.color_secondary }};
  border-bottom: 1px solid {{ settings.color_secondary }};
  font-size: 16px;
  font-weight: 600;
  line-height: 1;
  text-transform: uppercase;
  opacity: 0;
  visibility: hidden;
  -webkit-transition: all 0.3s ease-in-out 0s;
  -o-transition: all 0.3s ease-in-out 0s;
  transition: all 0.3s ease-in-out 0s;
}
.slider-category2 .cat-slider .category-wrap:hover a.text-content span.cat-title{
  opacity: 0;
  visibility: inherit;
}
@media(max-width: 1199px){
  .slider-category2 .cat-slider .category-wrap a.text-content{
    margin-top: 15px;
  }
}
</style>