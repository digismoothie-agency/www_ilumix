<section class="payment-service4">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-12 col-md-12 col-12 col-center">
        <div class="row">
          <div class="col-xl-5 col-lg-5 col-md-12 col-12">
            <div class="main-title">
              {% if section.settings.pay_policy_title != '' %}
              <h3>{{ section.settings.pay_policy_title }}</h3>
              {% endif %}
              {% if section.settings.pay_policy_des != '' %}
              <p>{{ section.settings.pay_policy_des }}</p>
              {% endif %}
              {% if section.settings.more_button != '' %}
              <a href="{{ block.settings.more_button_url }}" class="read-button">
                  {{ section.settings.more_button }}
              </a>
              {% endif %}
            </div>
          </div>
          <div class="col-xl-7 col-lg-7 col-md-12 col-12">
            <div class="que-ans">
              <ul>
                {% for block in section.blocks %}
                <li>
                  <div class="ans-accordian">
                    <p>{{ block.settings.pay_policy_ans1 }}</p>
                  </div>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Payment Policy3",
  "settings": [
      {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type" : "paragraph",
      "content" : "Desktop / Laptop"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type" : "paragraph",
      "content" : "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_lg",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom_lg",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type" : "paragraph",
      "content" : "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom_xs",
      "label": "Section Padding bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 40
    },
  {
    "type": "header",
    "content": "Page Title"
  },
  {
    "type": "textarea",
    "id": "pay_policy_title",
    "label": "Title",
    "default": "Success payment method to create a credit card for testing use one of test card numbers as card payment methods"
  },
  {
    "type": "textarea",
    "id": "pay_policy_des",
    "label": "Description",
    "default": "Lorem ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industryâ€™s standard dummy text ever since the 1500s, when an unknown printer took a galley of type a type specimen book. Lorem Ipsum is simply dummy."
  },
  {
      "type": "text",
      "id": "more_button",
      "label": "Read Button",
      "default": "MORE INFORMATION"
  },
  {
      "type": "url",
      "id": "more_button_url",
      "label": "Button URL"
  }
  ],
  "blocks":[
  {
    "type": "payment-policy",
    "name": "Payment Policy",
    "settings": [
    {
      "type": "textarea",
      "id": "pay_policy_ans1",
      "label": "Answer1",
      "info": "Type Here For Answer",
      "default": "Bank transfers are a payment method from a customer bank to a merchant bank"
    }
    ]
  }
  ]
}
{% endschema %}
<style type="text/css">
  .payment-service4 {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    border-top: 1px solid #e2e2e2;
  }
  @media (max-width: 1199px) {
    .payment-service4 {
      padding-top: {{ section.settings.section_padding_top_lg }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_lg }}px;
    }
  }
  @media (max-width: 767px) {
    .payment-service4 {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  /*section title*/
  .payment-service4 .main-title {
    width: 85%;
  }
  .payment-service4 .main-title h3{
    font-size: 24px;
    font-weight: 500;
  }
  .payment-service4 .main-title p{
    font-size: 16px;
    line-height: 30px;
    margin-top: 30px;
  }
  .payment-service4 .main-title a.read-button{
    font-size: 16px;
    text-transform: uppercase;
    font-weight: 600;
    border-bottom: 1px solid #232323;
    margin-top: 30px;
  }
  .payment-service4 .main-title a.read-button:hover{
    color: {{ settings.color_primary }};
    border-color: {{ settings.color_primary }};
  }
  @media(max-width: 1599px){
    .payment-service4 .main-title {
      width: 100%;
    }
  }

  /*section content*/
  .payment-service4 .que-ans {
    width: 95%;
    margin-left: auto;
  }
  .payment-service4 .que-ans ul li {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #e2e2e2;
  }
  .payment-service4 .que-ans ul li:first-child {
    margin-top: 0px;
    padding-top: 0px;
    border-top: none;
  }
  .payment-service4 .que-ans ul li p {
    font-size: 16px;
    {%- if settings.enable_rtl -%}
    padding-right: 15px;
    {%- else -%}
    padding-left: 15px;
    {%- endif -%}
    position: relative;
  }
  .payment-service4 .que-ans ul li p::before {
    content: "";
    position: absolute;
    top: 10px;
    {%- if settings.enable_rtl -%}
    right: 0;
    {%- else -%}
    left: 0;
    {%- endif -%}
    height: 8px;
    width: 8px;
    background-color: #666;
    border-radius: 100%;
  }
  @media (max-width: 991px) {
    .payment-service4 .que-ans{
      width: 100%;
      margin-top: 30px;
    }
  }
  @media (max-width: 767px) {
    .payment-service4 .que-ans ul li {
      margin-top: 20px;
    }
  }
</style>