<section class="contact-map-wrap2">
  <div class="container">
    <div class="row">
      <div class="col-xl-5 col-lg-5 col-md-5 col-12">
        <div class="store-info">
          <div class="section-capture">
            <div class="main-title">
              <h2>{{ section.settings.section_title }}</h2>
            </div>
          </div>
            <ul class="info_wrap">
              <li class="info_wrapper wow animate__fadeInLeft">
                <div class="info-block">
                  <div class="icon">
                    {{ section.settings.info_icon1 }}
                  </div>
                  <div class="text-block">
                    <h6>{{ section.settings.info_title1 }}</h6>
                    <p>{{ section.settings.info_link1 }}</p>
                  </div>
                </div>
              </li>
              <li class="info_wrapper wow animate__fadeInLeft">
                <div class="info-block">
                  <div class="icon">
                    {{ section.settings.info_icon2 }}
                  </div>
                  <div class="text-block">
                    <h6>{{ section.settings.info_title2 }}</h6>
                    <p>{{ section.settings.info_link2 }}</p>
                  </div>
                </div>
              </li>
              <li class="info_wrapper wow animate__fadeInLeft">
                <div class="info-block">
                  <div class="icon">
                    {{ section.settings.info_icon3 }}
                  </div>
                  <div class="text-block">
                    <h6>{{ section.settings.info_title3 }}</h6>
                    <p>{{ section.settings.info_link3 }}</p>
                  </div>
                </div>
              </li>
            </ul>
        </div>
      </div>
      <div class="col-xl-7 col-lg-7 col-md-7 col-12">
        
        <div class="contact-map-wrap wow animate__fadeIn">
          {{ section.settings.map_frame }}
        </div>
        
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Contact Map",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_ipad",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom_ipad",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Map Setting"
    },
    {
      "type": "textarea",
      "id": "map_frame",
      "label": "map frame"
    },
    {
      "type": "header",
      "content": "Information Content"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our store Information"
    },
    {
      "type": "textarea",
      "id": "info_icon1",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "info_title1",
      "label": "Title1",
      "default": "Address"
    },
    {
      "type": "text",
      "id": "info_link1",
      "label": "Link Title",
      "default": "70 Washington Square South <br>New York, NY 10012, United States"
    },
    {
      "type": "textarea",
      "id": "info_icon2",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "info_title2",
      "label": "Title2",
      "default": "Phone"
    },
    {
      "type": "text",
      "id": "info_link2",
      "label": "Link Title2",
      "default": "+1 234 567 8910 <br>+1 234 567 8910"
    },
    {
      "type": "textarea",
      "id": "info_icon3",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "info_title3",
      "label": "Title3",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "info_link3",
      "label": "Link Title3",
      "default": "info@yourdomain.com"
    }
  ],
  "presets":[
    {
      "name": "Contact Map",
      "category": "contact us"
    }
  ]
}
{% endschema %}
<style>
  .contact-map-wrap2{
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  {% if section.settings.contact_us_map_enable %}
  .contact-map-wrap2 .contact-map-wrap {
    -ms-filter: grayscale(100%);
    filter: grayscale(100%);
  }
  .contact-map-wrap2 .contact-map-wrap .map {
    height: {{ section.settings.contact_us_map_height }}px;
    width: 100%;
    box-shadow: 0px 0px 0px 1px #e2e2e2;
    border: 10px solid #fff;
  }
  {% endif %}
  @media (max-width: 1199px){
    .contact-map-wrap2{
      padding-top: {{ section.settings.section_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px){
    .contact-map-wrap2{
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
    .contact-map-wrap2 .contact-map-wrap .map {
      height: 320px;
    }
    .contact-map-wrap2 .contact-map-wrap{
      padding-top: 30px;
    }
  }
  /*section title*/
  .store-info .main-title h2{
    font-size: 40px;
    font-weight: 600;
  }
  @media(max-width: 1199px){
    .store-info .main-title h2{
      font-size: 26px;
    }
  }
  @media(max-width: 767px){
    .store-info .main-title h2{
      font-size: 20px;
      text-align: center;
    }
  }
  /*information block*/
  .store-info ul li{
    margin-top: 30px;
  }
  .store-info ul li:first-child{
    margin-top: 0px;
  }
  .store-info ul li:nth-child(1){
    animation-delay: 0.1s;
  }
  .store-info ul li:nth-child(2){
    animation-delay: 0.2s;
  }
  .store-info ul li:nth-child(3){
    animation-delay: 0.3s;
  }
  .store-info ul li .info-block{
    display: flex;
  }
  .store-info ul li .info-block .text-block {
    {% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
    
  }
  .store-info ul li .info-block .icon svg{
    width: 38px;
    height: 38px;
    stroke: {{ settings.color_primary }};
  }
  .store-info ul li .info-block .text-block h6{
    font-size: 20px;
    font-weight: 500;
  }
  .store-info ul li .info-block .text-block p{
    font-size: 16px;
    padding-top: 3px;
  }
  @media(max-width: 1199px){
    .store-info ul li .info-block .text-block h6{
      font-size: 18px;
    }
  }
  @media(max-width: 767px){
    .store-info ul li {
      margin-top: 15px;
    }
    .store-info ul li .info-block .text-block h6{
      font-size: 16px;
    }
    .store-info ul li .info-block .text-block p{
      font-size: 14px;
    }
  }
</style>