<section class="collection-category-cust">
  <div class="container-fluid container-col">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_sub_title !='' %}
            <span>{{ section.settings.section_sub_title }}</span>
            {% endif %}
            {% if section.settings.section_title !='' %}
            <h2>{{ section.settings.section_title }}</h2>
            {% endif %}
          </div>
        </div>
        {% assign category_product = collections[section.settings.best_label_product] %}
        <div class="collection-slider owl-carousel owl-theme" id="best-{{ section.id }}">
          {% assign category_product_limit = section.settings.section_product_limit_handle %}
          {% for product in category_product.products limit: category_product_limit %}
          <div class="item wow animate__fadeIn">
            {% include 'product-grid-item' %}
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $( document ).ready(function() {
    $('#best-{{ section.id }}').owlCarousel({
      loop: false,
      margin: 30,
      nav: false,
      dots: false,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      autoplay: false,
      responsive:{
        0:{
          items: 2,
          margin: 15
        },
        479:{
          items: 2,
          margin: 15
        },
        768:{
          items: 3
        },
        979:{
          items: 3
        },
        1199:{
          items: {{ section.settings.section_product_limit }}
        }
      }
    });
  });
</script>
