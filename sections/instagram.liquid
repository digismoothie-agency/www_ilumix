<style type="text/css">
    .insta-wrap {
        padding-top:{{ section.settings.insta_padding_top }}px;
        padding-bottom:{{ section.settings.insta_padding_bottom }}px;
        {% if section.settings.insta_check %}
        background-color: {{ section.settings.insta_bgcolor }};
        {% endif %}
    }
    @media (max-width: 1199px) {
        .insta-wrap {
            padding-top:{{ section.settings.insta_padding_top_ipad }}px;
            padding-bottom:{{ section.settings.insta_padding_bottom_ipad }}px;
        }
    }
    @media (max-width: 767px) {
        .insta-wrap {
            padding-top:{{ section.settings.insta_padding_top_xs }}px;
            padding-bottom:{{ section.settings.insta_padding_bottom_xs }}px;
        }
    }
    .insta-wrap .container-col{
        padding-left: 130px;
        padding-right: 130px;
    }
    @media(max-width: 1599px){
        .insta-wrap .container-col{
            padding-left: 30px;
            padding-right: 30px;
        }
    }
    @media(max-width: 767px){
        .insta-wrap .container-col{
            padding-left: 15px;
            padding-right: 15px;
        }
    }
    .insta-wrap-inner{
        position: relative;
        z-index: 1;
    }
    .insta-wrap a.insta-content{
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .insta-wrap span.insta-title {
        background-color: #fff;
        padding: 12px 30px;
        position: absolute;
        bottom: 50%;
        {%- if settings.enable_rtl -%}
        left: 50%;
        {%- else -%}
        right: 50%;
        {%- endif -%}
        transform: translate(50%, 50%);
        width: 200px;
        height: 200px;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        border-radius: 5px;
    }
    .insta-wrap span.insta-title h6{
        color: {{ settings.color_secondary }};
        font-size: 20px;
        font-weight: 400;
    }
    .insta-wrap span.insta-title i{
        width: 22px;
        margin: 0 auto;
        font-size: 22px;
        margin-bottom: 10px;
        display: block;
        background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .insta-wrap a.insta-content span.insta-icon,
    .insta-wrap a.insta-content span.insta-icon:hover{
        -webkit-transition: all 0.3s ease-in-out 0s;
        -o-transition: all 0.3s ease-in-out 0s;
        transition: all 0.3s ease-in-out 0s;
    }
    .insta-wrap a.insta-content span.insta-icon{
        font-size: 18px;
        position: absolute;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #222;
        opacity: 0;
        visibility: hidden;
        background-color: #fff;
        border-radius: 100%;
        z-index: 2;
    }
    .insta-wrap a.insta-content:hover span.insta-icon{
        opacity: 1;
        visibility: visible;
    }
    .insta-wrap a.insta-content span.insta-icon:hover{
        background-color: {{ settings.color_primary }};
        color: #fff;
    }
    @media(max-width: 991px){
        .insta-wrap span.insta-title h6{
            font-size: 14px;
        }
        .insta-wrap span.insta-title{
            width: 150px;
            height: 120px;
        }
    }
    @media(max-width: 767px){
        .insta-wrap span.insta-title{
            padding: 10px 20px;
        }
    }
</style>