<section class="insta-wrap">
    <div class="container-fluid container-col">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                <div class="section-capture">
                    <div class="section-title">
                        {% if section.settings.section_sub_title !='' %}
                        <span>{{ section.settings.section_sub_title }}</span>
                        {% endif %}
                        {% if section.settings.section_title !='' %}
                        <h2>
                            <span>{{ section.settings.section_title1 }}</span>
                        </h2>
                        {% endif %}
                    </div>
                </div>
                <div class="insta-wrap-inner">
                    <span class="insta-title">
                        {% if section.settings.insta_title !='' %}
                        <h6>
                            <i class="fa fa-instagram"></i>
                            {{ section.settings.insta_title }}
                        </h6>
                        {% endif %}
                    </span>
                    <div class="owl-carousel owl-theme" id="insta-slider">
                        {% for block in section.blocks %}
                        <div class="item wow animate__fadeInUp">
                            <a class="insta-content banner-hover" href="{{ block.settings.slider_banner_url }}" target="blank">
                                <img src="{% if block.settings.insta_img %}{{ block.settings.insta_img | img_url: 'master' }}{% else %}https://via.placeholder.com/320x320{% endif %}">
                                <span class="insta-icon"><i class="fa fa-instagram"></i></span>
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<script>
    $( document ).ready(function() {
        $('#insta-slider').owlCarousel({
            loop:true,
            margin:30,
            items: 6,
            {%- if settings.enable_rtl -%}
            rtl: true,
            {%- else -%}
            fade: true,
            {%- endif -%}
            nav: false,
            navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
            lazyLoad: true,
            dots: false,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true,
            responsive:{
                0:{
                    items: 1,
                    margin:15
                },
                479:{
                    items: 2,
                    margin:15
                },
                768:{
                    items: 4,
                    margin:15
                },
                979:{
                    items: 4
                },
                1199: {
                    items: 5
                }
            }
        });
    });
</script>
