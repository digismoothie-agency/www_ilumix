    opacity: 1;
    visibility: visible;
  }
  .about-section4 .category-wrap .category-img-cont .explor-btn h6.cat-title,
  .about-cat-slider .category-wrap:hover .category-img-cont .explor-btn h6.cat-title{
    -webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
    transition: all 0.3s ease-in-out 0s;
  }
  .about-cat-slider .category-wrap .category-img-cont .explor-btn h6.cat-title{
    transform: translateY(30px);
  }
  .about-cat-slider .category-wrap:hover .category-img-cont .explor-btn h6.cat-title{
    transform: translateY(0px);
  }
  .about-cat-slider .category-wrap .category-img-cont a.cat-img{
    display: block;
    position: relative;
    overflow: hidden;
  }
  .about-cat-slider .category-wrap h6.cat-title{
    font-size: 16px;
    text-transform: uppercase;
    background-color: #fff;
    padding: 20px 35px;
    line-height: 1;
  }
  @media (max-width: 1199px){
    .about-cat-slider .category-wrap a.cat-title{
      position: unset;
      width: 100%;
      transform: translateY(0%);
    }
