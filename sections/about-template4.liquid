<!-- Browuse categoryies -->
<section class="about-section4">
  <div class="about-cat-slider owl-carousel owl-theme" id="about-category-slider">
    {% for block in section.blocks %}
    {% assign category_product = collections[block.settings.slider_category_handle] %}
    <div class="item wow animate__fadeIn">
      <div class="category-wrap">
        <div class="category-img-cont">
          <a href="{{ category_product.url }}" class="banner-hover cat-img">
            <img class="img-fluid" src="{% if block.settings.collection_img %}{{ block.settings.collection_img | img_url: 'master' }}{% else %}https://dummyimage.com/620x557/f7f7f7/999999{% endif %}">
            <div class="explor-btn">
              <h6 class="cat-title"><span>{{ category_product.title }}</span></h6>
            </div>
          </a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<script type="text/javascript">
  $('#about-category-slider').owlCarousel({
    loop: true,
    rewind: true,
    margin: 30,
    nav: false,
    navText: ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
    dots: false,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    autoplay: true,
    autoplayTimeout: 5000,
    autoplayHoverPause: true,
    responsive:{
      0:{
        margin: 15,
        items: 1
      },
      479:{
        margin: 15,
        items: 1
      },
      768:{
        items: 2
      },
      979:{
        items: 3
      },
      1199:{
        items: 3
      }
    }
  });
</script>

