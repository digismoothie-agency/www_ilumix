<section class="return-policy">
  <div class="section-content">
    <div class="container">
      <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-6 col-12">
          <div class="text-wrap">
            <h2>{{ section.settings.content_title }}</h2>
            <p>{{ section.settings.content_description }}</p>
            <a href="{{ section.settings.content_button_url }}">{{ section.settings.content_button }}</a>
          </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-12">
          <div class="return-img wow animate__fadeIn">
            <a class="play-button popup-youtube" href="{{ section.settings.banner_bg_button_url }}">
              <i class="{{ section.settings.content_btn_icon }}"></i>
              <span class="video-icon-sonar">
                <span class="video-icon-sonar-bfr"></span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
