<section class="about-section1">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="about-content">
                    <div class="section-capture">
                      <div class="main-title">
                          {% if section.settings.section_sub_title != '' %}
                          <span class="section-sub-title wow animate__flipInX">{{ section.settings.section_sub_title }}</span>
                          {% endif %}
                          {% if section.settings.section_title != '' %}
                          <h2 class="wow animate__fadeIn">{{ section.settings.section_title }}</h2>
                          {% endif %}
                          {% if section.settings.section_arrow != '' %}
                          <div  class="section-arrow"><p>{{ section.settings.section_arrow }}</p></div>
                          {% endif %}
                          {% if section.settings.section_button_text != '' %}
                            <a href="{{ section.settings.section_button_link }}" class="btn btn-style3">{{ section.settings.section_button_text }}</a>
                          {% endif %}
                      </div>
                    </div>
                    <div class="about-banner-area">
                        {% for block in section.blocks %}
                        <div class="about-banner-img-cont">
                            <div class="single-banner wow animate__fadeIn" style="background-image: url('{% if block.settings.about_banner_img %}{{ block.settings.about_banner_img | img_url: 'master' }}{% else %}https://dummyimage.com/625x473/f7f7f7/999999{% endif %}');">
                            </div>
                            <div class="abt-banner-desc">
                                {% if block.settings.about_title != '' %}
                                <h6>{{ block.settings.about_title }}</h6>
                                {% endif %}

                                {% if block.settings.about_des1 != '' %}
                                <p>{{ block.settings.about_des1}}</p>
                                {% endif %}

                                {% if block.settings.about_des2 != '' %}
                                <p>{{ block.settings.about_des2 }}</p>
                                {% endif %}
                          </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "About Section 1",
    "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "about_product_padding_top",  
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },           
    {
      "type": "range",
      "id": "about_product_padding_bottom", 
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type" : "paragraph",
      "content" : "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_ipad",  
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },           
    {
      "type": "range",
      "id": "about_product_padding_bottom_ipad", 
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type" : "paragraph",
      "content" : "Mobile"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_xs",  
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },           
    {
      "type": "range",
      "id": "about_product_padding_bottom_xs", 
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
        "type": "header",
        "content": "Content"
    },
    {
        "type": "text",
        "id": "section_sub_title",
        "label": "Sub Title",
        "default": "20+ Year"
    },
     {
        "type": "text",
        "id": "section_title",
        "label": "Title",
        "default": "of experience"
    },
    {
        "type": "textarea",
        "id": "section_arrow",
        "label": "Section Arrow"
    },
    {
        "type": "text",
        "id": "section_button_text",
        "label": "Section button"
    },
    {
        "type": "url",
        "id": "section_button_link",
        "label": "Section button URL"
    }
    ],
    "blocks":[
    {
        "type": "about_section1",
        "name": "About Section 1",
        "settings": [
        {
            "type": "image_picker",
            "id": "about_banner_img",
            "label": "Image",
            "info": "Recommended Size: 625 x 473px"
        },
