<style>
    .about-section1{
      padding-top: {{ section.settings.about_product_padding_top }}px;
      padding-bottom: {{ section.settings.about_product_padding_bottom }}px;
    }
    @media (max-width: 1199px){
      .about-section1{
        padding-top: {{ section.settings.about_product_padding_top_ipad }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_ipad }}px;
      }
    }
    @media (max-width: 767px){
      .about-section1{
        padding-top: {{ section.settings.about_product_padding_top_xs }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_xs }}px;
      }
    }

    /*section title*/
    .about-section1 .main-title {
      text-align: center;
    }
    .about-section1 .main-title span.section-sub-title{
      font-size: 112px;
      font-weight: 800;
      text-transform: uppercase;
      line-height: 1;
      -webkit-text-fill-color: transparent;
      -webkit-text-stroke: 1px;
      color: #999;
    }
    .about-section1 .main-title h2{
      font-size: 50px;
      line-height: 1;
      font-weight: 500;
      margin-top: 15px;
    }
    .about-section1 .main-title .section-arrow{
      padding-top: {{ section.settings.about_product_padding_top_ipad }}px;
    }
    .about-section1 .main-title .section-arrow svg{
      opacity: .2;
    }

    .about-section1 .main-title .btn {
      margin-top: 2rem;
    }
  
    @media(max-width: 1199px){
      .about-section1 .main-title span.section-sub-title{
        font-size: 62px;
      }
      .about-section1 .main-title h2 {
        font-size: 26px;
      }
      .about-section1 .main-title .section-arrow{
        padding-top: {{ section.settings.about_product_padding_top_xs }}px;
      }
    }
     @media(max-width: 767px){
      .about-section1 .main-title span.section-sub-title{
        font-size: 40px;
      }
      .about-section1 .main-title h2{
        font-size: 20px;
      }
     }
      
      @media(max-width: 600px) {
        .about-section1 .main-title .section-arrow{
          padding-top: 0;
        }
      }

    .about-content .about-banner-area .about-banner-img-cont{
        display: flex;
        position: relative;
        margin-top: 30px;
    }
    .about-content .about-banner-area .about-banner-img-cont:first-child{
        margin-top: 0px;
    }
    .about-content .about-banner-area .about-banner-img-cont:nth-child(even){
        flex-direction: row-reverse;
    }
    .about-content .about-banner-area .about-banner-img-cont .single-banner {
        min-height: 400px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        width: 50%;
    }
    .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc{
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        justify-content: center;
        width: 50%;
        padding: 60px;
        background-color: {{ settings.color_primary }};
    }
    .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc h6{
      font-size: 20px;
      line-height: 1;
      color: #fff;
      font-weight: 500;
    }
    .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc p{
      color: #fff;
      margin-top: 30px;
      font-size: 16px;
      font-weight: 300;
    }
    .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc a{
      margin-top: 30px;
    }
    @media (max-width: 991px) {
        .about-content .about-banner-area .about-banner-img-cont .single-banner {
            min-height: 300px;
        }
        .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc{
          padding: 60px 30px;
        }
    }
    @media (max-width: 767px) {
        .about-content .about-banner-area .about-banner-img-cont,
        .about-content .about-banner-area .about-banner-img-cont:nth-child(even){
            flex-direction: column;
        }
        .about-content .about-banner-area .about-banner-img-cont{
            margin-top: 20px;
        }
        .about-content .about-banner-area .about-banner-img-cont .single-banner{
            width: 100%;
        }
        .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc{
            width: 100%;
            padding: 30px;
        }
        .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc h6{

        }
        .about-content .about-banner-area .about-banner-img-cont .abt-banner-desc p{

        }
    }
</style>