<section class="about-section2">
  <div class="container">
    <div class="row">
          <div class="col-xl-6 col-lg-6 col-md-12 col-12">
            <div class="main-title">
              {% if section.settings.section_title != '' %}
              <h3>{{ section.settings.section_title }}</h3>
              {% endif %}
              {% if section.settings.section_desc != '' %}
              <p>{{ section.settings.section_desc }}</p>
              {% endif %}
            </div>
          </div>
          <div class="col-xl-6 col-lg-6 col-md-12 col-12">
            <div class="list-content">
              <ul>
                {% for block in section.blocks %}
                <li>
                  <div class="list-block">
                    <h6>{{ block.settings.list_title }}</h6>
                    <p>{{ block.settings.list_desc }}</p>
                  </div>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
  </div>
</section>
{% schema %}
{
  "name": "About Section2",
  "settings": [
  {
    "type": "header",
    "content": "Section Padding"
  },
  {
    "type" : "paragraph",
    "content" : "Desktop / Laptop"
  },
  {
    "type": "range",
    "id": "section_padding_top",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type": "range",
    "id": "section_padding_bottom",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type" : "paragraph",
    "content" : "Ipad pro / Ipad"
  },
  {
    "type": "range",
    "id": "section_padding_top_lg",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type": "range",
    "id": "section_padding_bottom_lg",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type" : "paragraph",
    "content" : "Mobile"
  },
  {
    "type": "range",
    "id": "section_padding_top_xs",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  },
  {
    "type": "range",
    "id": "section_padding_bottom_xs",
    "label": "Section Padding bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  },
  {
    "type": "header",
    "content": "Page Title"
  },
  {
    "type": "text",
    "id": "section_title",
    "label": "Section Title",
    "default": "Perfect powerful theme for corporate business"
  },
  {
    "type": "text",
    "id": "section_desc",
    "label": "Description",
    "default": "These website standard terms and conditions written on this webpage shall manage your use of our website, webiste name accessible at website these terms will be applied fully and affect to your use of this website."
  },
  {
      "type": "text",
      "id": "more_button",
      "label": "Read Button",
      "default": "ABOUT SERVICES"
  },
  {
      "type": "url",
      "id": "more_button_url",
      "label": "Button URL"
  }
  ],
  "blocks":[
  {
    "type": "about_template2",
    "name": "About Section2",
    "settings": [
    {
      "type": "text",
      "id": "list_title",
      "label": "List Title",
      "default": "Men's collection"
    },
    {
      "type": "textarea",
      "id": "list_desc",
      "label": "List Description",
      "default": "Lorem Ipsum is simply dummy text been the printing show typesetting industry."
    }
    ]
  }
  ],
  "presets":[
    {
        "name": "About Section 2",
        "category": "About us"
    }
    ]
}
{% endschema %}
