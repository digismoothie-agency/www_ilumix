<section class="contactPage">
	<div class="contactPage__wrapper wrapper">
        {% if section.settings.contact_page_title != '' %}
          <h1>{{ section.settings.contact_page_title }}</h1>
        {% endif %}
		<div class="contactPage__row">
            <div class="contactPage__col contactPage__col--info">
                {% if section.settings.contact_page_companyname != '' %}
                <strong class="contactPage__companyName">
                    {{ section.settings.contact_page_companyname }}
                </strong>  
                {% endif %}

                {% if section.settings.contact_page_address != '' %}
                  <div class="contactPage__contacts">
                    <span class="contactPage__sectionHeadline">Adresa</span>
                    <svg class="contactPage__icon" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                    <span>{{ section.settings.contact_page_address }}</span>
                  </div>
                {% endif %}

                {% if section.settings.contact_page_phone != '' %}
                  <div class="contactPage__contacts">
                    <span class="contactPage__sectionHeadline">Telefon</span>
                      <a class="contactPage__contact contactPage__contact--phone" href="tel:{{ section.settings.contact_page_phone }}">
                        <svg class="contactPage__icon" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M15.05 5A5 5 0 0 1 19 8.95M15.05 1A9 9 0 0 1 23 8.94m-1 7.98v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                        {{ section.settings.contact_page_phone }}
                      </a>
                  </div>
                {% endif %}

                {% if section.settings.contact_page_email != '' %}
                  <div class="contactPage__contacts">
                      <span class="contactPage__sectionHeadline">Email</span>
                      <a class="contactPage__contact contactPage__contact--email" href="mailto:{{ section.settings.contact_page_email }}">
                        <svg class="contactPage__icon" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                        {{ section.settings.contact_page_email }}
                      </a>
                  </div>
                {% endif %}

                {% if section.settings.contact_page_companyinfo != '' %}
                  <div class="contactPage__companyInfo">
                    <span>{{ section.settings.contact_page_companyinfo }}</span>
                  </div>  
                {% endif %}
                
                {% if section.settings.contact_page_bankid != '' %}
                <div class="contactPage__companyInfo">
                    <span>{{ section.settings.contact_page_bankid }}</span>
                </div>
                {% endif %}
            </div>

            <div class="contactPage__col contactPage__col--map">
                <iframe class="contactPage__map" src="https://maps.google.com/maps?q=Hole%C4%8Dkova%20368/4%20Karlovy%20Vary&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=&amp;output=embed" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Contact info",
    "settings": [
      {
        "type": "header",
        "content": "Section Title"
      },
      {
        "type": "text",
        "id": "contact_page_title",
        "label": "Page title",
        "default": "Kontakty"
      },
      {
        "type": "text",
        "id": "contact_page_companyname",
        "label": "Company name",
        "default": "Název společnosti"
      },
      {
        "type": "textarea",
        "id": "contact_page_address",
        "label": "Adresa společnosti"
      },
      {
        "type": "textarea",
        "id": "contact_page_companyinfo",
        "label": "Údaje o společnosti"
      },
      {
        "type": "textarea",
        "id": "contact_page_bankid",
        "label": "Bankovní informace"
      },
      {
        "type": "text",
        "id": "contact_page_phone",
        "label": "Telefonní číslo",
        "default": "123456789"
      },
      {
        "type": "text",
        "id": "contact_page_email",
        "label": "E-mail",
        "default": "email@email.cz"
      }
    ],
    "presets":[
      {
        "name": "Contact informations",
        "category": "Contact header"
      }
    ]
      
  }
{% endschema %}

