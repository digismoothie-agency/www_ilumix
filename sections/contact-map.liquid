<section class="main-content-wrap contact-us-page wow animate__fadeIn">
  <div class="contact-map">
    {{ section.settings.map_frame }}
  </div>
</section>

{% schema %}
{
  "name": "Contact Map",
  "settings": [
  {
    "type": "header",
    "content": "Section Padding"
  },
  {
    "type": "range",
    "id": "contact_map_padding_top",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type": "range",
    "id": "contact_map_padding_bottom",
    "label": "Section Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 100
  },
  {
    "type": "paragraph",
    "content": "Ipad pro / Ipad"
  },
  {
    "type": "range",
    "id": "contact_map_padding_top_ipad",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type": "range",
    "id": "contact_map_padding_bottom_ipad",
    "label": "Section Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 60
  },
  {
    "type": "paragraph",
    "content": "Mobile"
  },
  {
    "type": "range",
    "id": "contact_map_padding_top_xs",
    "label": "Section Padding Top",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  },
  {
    "type": "range",
    "id": "contact_map_padding_bottom_xs",
    "label": "Section Padding Bottom",
    "min": 0,
    "max": 100,
    "step": 5,
    "unit": "px",
    "default": 40
  },
  {
    "type": "textarea",
    "id": "map_frame",
    "label": "map frame"
  }
  ],
  "presets":[
  {
    "name": "Contact Map",
    "category": "contact us"
  }
  ]
}
{% endschema %}

<style>
  .contact-us-page{
    padding-top: {{ section.settings.contact_map_padding_top }}px;
    padding-bottom: {{ section.settings.contact_map_padding_bottom }}px;
  }

  @media (max-width: 1199px){
    .contact-us-page{
      padding-top: {{ section.settings.contact_map_padding_top_ipad }}px;
      padding-bottom: {{ section.settings.contact_map_padding_bottom_ipad }}px;
    }
  }
  @media (max-width: 767px){
    .contact-us-page{
      padding-top: {{ section.settings.contact_map_padding_top_xs }}px;
      padding-bottom: {{ section.settings.contact_map_padding_bottom_xs }}px;
    }
  }
</style>