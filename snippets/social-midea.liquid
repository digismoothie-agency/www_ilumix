<ul class="social-icon">
  {% if settings.social_icon_1_name != blank %}
  <li>
    <a href="{{ settings.social_icon_1_link }}">
      <i class="{{ settings.social_icon_1_name }}"></i>
      <span>{{ settings.social_1_name }}</span>
    </a>
  </li>        
  {% endif %}

  {% if settings.social_icon_2_name != blank %}
  <li>
    <a href="{{ settings.social_icon_2_link }}">
      <i class="{{ settings.social_icon_2_name }}"></i>
      <span>{{ settings.social_2_name }}</span>
    </a>
  </li>        
  {% endif %}

  {% if settings.social_icon_3_name != blank %}
  <li>
    <a href="{{ settings.social_icon_3_link }}">
      <i class="{{ settings.social_icon_3_name }}"></i>
