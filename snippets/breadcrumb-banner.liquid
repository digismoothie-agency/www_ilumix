    font-size: 30px;
    font-weight: 500;
    line-height: 1;
    color: #000;
    
}
{% elsif template contains 'customers' %}
.breadcrumb-area .breadcrumb-index .breadcrumb-title h1{
    font-size: 45px;
    font-weight: 700;
    line-height: 1;
    color: #000;
    margin-bottom:20px;
    margin-top:10px;
}
.breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
    font-size: 30px;
    font-weight: 500;
    line-height: 1;
    color: #000;
    
}
{% else %}
.breadcrumb-area .breadcrumb-index .breadcrumb-title h1{
    font-size: 45px;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    margin-bottom:20px;
    margin-top:10px;
}
.breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
    font-size: 30px;
    font-weight: 500;
    line-height: 1;
    color: #fff;
    
}

{% endif %}
@media (max-width: 1199px) {
    .breadcrumb-area .breadcrumb-index .breadcrumb-title{
        margin-top: 15px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h1{
        font-size: 30px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
        font-size: 25px;
    }
}
@media(max-width:900px){
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h1{
        font-size: 25px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
        font-size: 18px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title .collection-dec{
        font-size:14px;
    }
}
@media (max-width: 767px) {
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h1{
        font-size: 20px;
    }
    .breadcrumb-area .breadcrumb-index .breadcrumb-title h2{
        font-size: 16px;
    }
    .breadcrumb-area{
        margin: 0 15px;
    }
}
@media (max-width: 500px) {
    .breadcrumb-area .breadcrumb-index .breadcrumb-title .collection-dec{
        font-size:12px;
    }
}
#myBtnMore{
    font-weight: bold;
    color:#fff;
    font-size:16px;
}
@media(max-width:768px){
#more {display: none;}
}
@media(min-width:769px){
    #myBtnMore, #dots{
        display:none;
    }
    #more {display: contents;}
}
</style>
<script>
    function showMoreText() {
        var dots = document.getElementById("dots");
        var moreText = document.getElementById("more");
        var btnText = document.getElementById("myBtnMore");
      
        if (dots.style.display === "none") {
          dots.style.display = "inline";
          btnText.innerHTML = "&gt; více";
          moreText.style.display = "none";
        } else {
          dots.style.display = "none";
          btnText.innerHTML = "< méně";
          moreText.style.display = "inline";
        }
      }
  </script>